..\FrameXML\UI.xsd">
	<Frame name="MoveAnythingOptions" parent="UIParent">
		<Scripts>
			<OnLoad function="MovAny_OptionsOnLoad"/>
			<OnShow function="MovAny_OptionsOnShow"/>
